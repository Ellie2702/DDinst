@model DDinst.Models.UserLogin 

@{
    ViewBag.Title = "Login";
}

<h2>Вход</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { @class = "form-control mb-2 mr-sm-2" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                @Html.LabelFor(model => model.PassHash, new { @class = "control-label col-md-2" })
            </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PassHash, new { @class = "form-control mb-2 mr-sm-2" })
                    @Html.ValidationMessageFor(model => model.PassHash)
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Войти" class="btn btn-outline-primary" />
                    @Html.ActionLink("Регистрация", "Registration", "Home", new { area = "" }, new { @class = "btn btn-outline-primary" })
                </div>
            </div>
        </div>
}